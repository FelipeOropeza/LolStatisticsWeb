<!DOCTYPE html>         
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Imagens/iconLol.png" type="image/x-icon">
    <title>@ViewBag.Title </title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="Fundo">
    <nav class="navbar navbar-expand-lg" style="background: #4682B4">
        <div class="container-fluid">
            <div class="navbar-header">
                <a id="titulo" class="navbar-brand" href="#">LolStatistics</a>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li id="link" class="nav-item">@Html.ActionLink("Home", "Index", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link active" })</li>
                    <li id="link" class="nav-item">@Html.ActionLink("Sobre", "Sobre", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link active" })</li>
                    <li id="link" class="nav-item">@Html.ActionLink("Contato", "Contact", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link active" })</li>
                    <li id="link" class="nav-item">@Html.ActionLink("FAQs", "Faqs", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link active" })</li>
                </ul>
                <form class="d-flex">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M12 2.5a5.25 5.25 0 00-2.519 9.857 9.005 9.005 0 00-6.477 8.37.75.75 0 00.727.773H20.27a.75.75 0 00.727-.772 9.005 9.005 0 00-6.477-8.37A5.25 5.25 0 0012 2.5z"></path></svg></li>&nbsp;
                        <li class="nav-item">@Html.ActionLink("Login", "Usuario", "Home", htmlAttributes: new { @id = "Link"})</li>
                    </ul>
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="footer">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top" style="background: #4682B4">
            <p id="copy" class="col-md-4 mb-0 text">&copy; @DateTime.Now.Year - LolStatistics</p>
            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                <img src="~/Imagens/iconLol.png"/>
            </a>

            <ul class="nav col-md-2 justify-content-end">
                <li class="nav-item">@Html.ActionLink("Sobre", "Sobre", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link px-2" })</li>
                <li class="nav-item">@Html.ActionLink("Contato", "Contact", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link px-2" })</li>
                <li class="nav-item">@Html.ActionLink("FAQs", "Faqs", "Home", htmlAttributes: new { @id = "Link", @class = "nav-link px-2" })</li>
            </ul>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
